      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
        <li> <%= link_to "About", about_path, class: "navbar-wagon-item navbar-wagon-link"%></li>
        <li><%= link_to "News", about_path, class: "navbar-wagon-item navbar-wagon-link"%></li>
        <li><%= link_to "Photos", photos_path, class: "navbar-wagon-item navbar-wagon-link"%></li>
