

<style>


  .show-carousel {
   -webkit-transform: translateY(100vh)!important;
  transform: translateY(100vh)!important;
}


.carousel-modal {
  height: 100vh;
  width: fill;
  position: fixed;
  top: 15px;
  /*left: 10px;*/
  margin-left: 15px;
  margin-right: 15px;
  background-color: white;


  -webkit-transform: translateY(0px);
  transform: translateY(0px);

/*  -webkit-transform: translateX(0px);
  transform: translateX(0px);*/
  transition: .3s ease all;
  z-index: 1000;
  box-shadow: 0px 0px 100px rgba(0,0,0,1);
  display: flex;
  justify-content: space-between;
  padding: 5px;

}

.x-icon {
  width: 70px;
  height: 70px;
  position: absolute;
  top: 15px;
  left: 15px;
  z-index: 2000;
}

</style>



<div id="carousel-id" class="show-carousel carousel-modal">

    <img class="x-icon" onclick="toggleCarousel('99')" src="http://res.cloudinary.com/di7okux3q/image/upload/v1524334866/whiteclose.png" alt="Cross">


<div id="myCarousel" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
      <% Image.all.each_with_index do |image, index| %>
          <% if index == 0 %>
          <li class="active" data-target="#myCarousel" data-slide-to="<%=index%>"></li>
          <% else %>
            <li data-target="#myCarousel" data-slide-to="<%=index%>"></li>
          <% end %>
      <% end %>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">

    <% Image.all.each_with_index do |image, index| %>
          <% if index == 0 %>
            <div class="item active">
            <img src="<%=cl_image_path(image.source, cloud_name: 'di7okux3q')%>" style="width:100vw;height:100vh">
          <% else %>
              <div class="item">
             <img src="<%=cl_image_path(image.source, cloud_name: 'di7okux3q')%>" style="width:100vw;height:100vh">
          <% end  %>
        </div>
    <% end %>

    </div>

    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
      <span class="glyphicon glyphicon-chevron-left"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
      <span class="glyphicon glyphicon-chevron-right"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>


</div>
