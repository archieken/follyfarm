<div class="about-sidenav">
  <a href="#news">news</a>
  <a href="#find">how to find us</a>
  <a href="#contact">contact info</a>
  <a href="#prices">prices</a>
</div>




<div class="about-main">


  <div class="about-section" id="news">
    <h4>news</h4>
  <%= simple_form_for @news do |f| %>
        <%= f.input :content, label: false, input_html: { class: 'ckeditor' } %>
        <%= f.button :submit, remote: true %>
      <% end %>


  </div>

  <div class="about-section" id="find">
      <h4>how to find us</h4>


        <div class="card-map" style="background-image: url('https://maps.googleapis.com/maps/api/staticmap?center=51.887358,-1.819547&markers=color:purple%7C51.887358,-1.819547&zoom=12&size=2000x1500&key=AIzaSyCKxAu_Y-IhJUSTXAcMghvx_UDSBSGm2l8')";'>
      </div>

      <%= simple_form_for @findus do |f| %>
        <%= f.input :content, label: false, input_html: { class: 'ckeditor' } %>
        <%= f.button :submit, "Update 'Find Us' Details" %>
      <% end %>

  </div>

  <div class="about-section" id="contact">
      <h4>contact info</h4>

    <%= simple_form_for @contactinfo do |f| %>
        <%= f.input :content, label: false, input_html: { class: 'ckeditor' } %>
        <%= f.button :submit, "Update Contact Info", remote: true %>
      <% end %>

  </div>

    <div class="about-section" id="prices">
        <h4>prices</h4>

   <%= simple_form_for @price do |f| %>
        <%= f.input :content, label: false, input_html: { class: 'ckeditor' } %>
        <%= f.button :submit %>
      <% end %>

  </div>



  <div style="padding-top: 350px;"></div>
</div>


<script src="https://code.jquery.com/jquery-1.10.2.js"></script>
<script>


  window.onscroll = function() {activateCat()};
  console.log("scroll");

  function activateCat() {

    var position = $(this).scrollTop();
    position = position + 100;

    $('.about-section').each(function() {
        var target = $(this).offset().top;
        var id = $(this).attr('id');

        if (position >= target) {
            $('.about-sidenav a').removeClass('active');
            $('.about-sidenav a[href=#' + id + ']').addClass('active');
        }
    });

  }


</script>
