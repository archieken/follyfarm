<style>

body {
  background-color: #CEDBD1;
}

  .attractions {
    background-color: #E5E5E5;
  }


  .attraction-card {
  display: inline;
  height: 200px;
  width: 450px;
  background-color: white;
  box-shadow: 0px 2px 10px rgba(0,0,0,0.2);
  border-radius: 4px;
  margin-right: 15px;
  flex-shrink: 0;
  overflow: hidden;
}


.attraction-card-content {
  display: flex;
  width: 100%;
  height: 100%;
}

.attraction-photo {
  background-size: cover;
  width: 33%;
  height: 100%;
}

.attraction-info {
  padding: 20px 30px;
  height: 100%;
  width: 67%;
}

.attraction-name {
  margin: 0px;
  font-family: Baskerville;
  font-size: 18px;
  font-weight: 600;
  letter-spacing: 0.5px;
  color: #524F4C;
}

.attraction-card-location {
  margin: 0px;
  margin-top: 10px;
  font-family: Baskerville;
  font-style: italic;
  font-weight: 600;
  font-size: 15px;
  color: #524F4C;
  letter-spacing: 1px;
  opacity: 0.3;
}

.attraction-card-para {
  font-size: 12px;
  opacity: 0.8;
  margin-top: 2px;
}



</style>

<div class="attractions">

  <div class="row">

    <% Attraction.all.each do |attraction| %>
    <div class="col-lg-4">
        <div class="attraction-card">
          <div class="attraction-card-content">
               <img class="attraction-photo" src=<%=cl_image_path('vwbeetle', cloud_name: 'di7okux3q')%> alt="Trolltunga Norway">
            <div class="attraction-info" style="display:inline">
              <h5 class="attraction-name"><%= attraction.subject %></h5>
              <h6 class="attraction-card-location">london</h6>
              <p class="attraction-card-para"><%= attraction.content %></p>
            </div>
          </div>
        </div>

  </div>
  <% end %>
  </div>


</div>
